/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.swipeContainer {
  width: 100%;
  height: 362rpx;
}

.swiperimg {
  width: 100%;
  height: 362rpx;
}

.commend {
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-bottom: 1px solid #dcdcdc;
  border-top: 1px solid #dcdcdc;
  display: flex;
  align-items: center;
  text-align: center;
}

.commend-text {
  margin: 0 auto;
  color: #333;
  font-size: 16;
}

.news-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 1rpx;
  width: 100%;
  align-items: left;
  text-align: center;
  background: white;
}

.news-img {
  width: 250rpx;
  height: 150rpx;
  vertical-align: middle;
}

.news-text {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 6rpx;
}

.news-title {
  color: black;
  text-align: justify;
  text-justify: inter-word;
}

.news-count {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding-right: 20rpx;
  text-align: right;
  font-size: 26rpx;
  float: right;
  color: #666;
  padding-bottom: 10rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.reply-count {
  margin-left: 10rpx;
  margin-right: 15rpx;
}

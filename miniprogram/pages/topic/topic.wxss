/* pages/topic/topic.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.list-container{
  width: 100%;
  height: 100%;
}
.news-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 1rpx;
  width: 100%;
  align-items: left;
  text-align: center;
  background: white;
}

.news-img {
  width: 250rpx;
  height: 150rpx;
  text-align: center;
  vertical-align: middle;
  margin: auto 0;
}

.news-text {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 6rpx;
}

.news-title {
  color: black;
  font-size: 30rpx;
  text-align: justify;
  margin-top: 10rpx;
  text-justify: inter-word;
  
}

.news-count {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding-right: 20rpx;
  text-align: right;
  font-size: 26rpx;
  float: right;
  color: #666;
  padding-bottom: 10rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.reply-count {
  margin-left: 10rpx;
  margin-right: 15rpx;
}
